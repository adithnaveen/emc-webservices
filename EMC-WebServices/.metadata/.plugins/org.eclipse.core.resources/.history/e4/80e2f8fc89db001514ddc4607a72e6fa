	@Override
	public Product getOneProduct(int productId) throws DAOException {
		try{
		Session session = getSession();
		Product product = (Product) session.get(Product.class, productId);
		return product;
		}catch(HibernateException he){
			throw new DAOException(he);
		}
	}

